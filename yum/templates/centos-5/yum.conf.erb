# Dynamically generated by Chef for <%= @node[:fqdn] %> -
# local modifications will be replaced.
#
[main]
cachedir=/var/cache/yum
keepcache=0
debuglevel=2
logfile=/var/log/yum.log
distroverpkg=redhat-release
tolerant=1
exactarch=1
obsoletes=1
gpgcheck=1
plugins=1

# Note: yum-RHN-plugin doesn't honor this.
metadata_expire=0

installonly_limit = <%= @node[:yum][:installonly_limit] %>

# PUT YOUR REPOS HERE OR IN separate files named file.repo
# in /etc/yum.repos.d

# remove the following line for i386 compatibility for certain packages
exclude=<%= @node[:yum][:exclude] %>

multilib_policy=<%= @node[:yum][:multilib_policy] %>
